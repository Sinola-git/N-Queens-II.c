#include <stdlib.h>

void solveNQueensCount(int n, int row, int* cols, int* diag1, int* diag2, int* count) {
    if (row == n) {
        (*count)++;
        return;
    }
    
    for (int c = 0; c < n; c++) {
        if (cols[c] || diag1[row + c] || diag2[row - c + n - 1])
            continue;

        cols[c] = diag1[row + c] = diag2[row - c + n - 1] = 1;
        solveNQueensCount(n, row + 1, cols, diag1, diag2, count);
        cols[c] = diag1[row + c] = diag2[row - c + n - 1] = 0; // backtrack
    }
}

int totalNQueens(int n) {
    int count = 0;
    int* cols = (int*)calloc(n, sizeof(int));
    int* diag1 = (int*)calloc(2*n - 1, sizeof(int));
    int* diag2 = (int*)calloc(2*n - 1, sizeof(int));

    solveNQueensCount(n, 0, cols, diag1, diag2, &count);

    free(cols);
    free(diag1);
    free(diag2);

    return count;
}
